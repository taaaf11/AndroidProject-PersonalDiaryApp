<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    app:cardElevation="6dp"
    app:cardBackgroundColor="@color/ctp_surface0"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/ctp_crust"
    >

    <androidx.constraintlayout.widget.ConstraintLayout

        android:id="@+id/cardControlsMarkdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        >
        <TextView
            android:id="@+id/tvbtnBold_fragment_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="B"
            android:textStyle="bold"
            android:textColor="@color/ctp_surface2"
            android:padding="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />

        <TextView
            android:id="@+id/tvbtnItalic_fragment_edit"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="I"
            android:textStyle="bold"
            android:textColor="@color/ctp_surface2"
            android:padding="10dp"
            app:layout_constraintTop_toBottomOf="@id/tvbtnBold_fragment_edit"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            />


    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>