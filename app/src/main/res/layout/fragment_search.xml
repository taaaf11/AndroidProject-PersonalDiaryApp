<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".SearchFragment">


    <ImageView
        android:id="@+id/ivBackButtonFragmentSearch"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/etSearchValueFragmentSearch"
        app:layout_constraintTop_toTopOf="@id/etSearchValueFragmentSearch"
        app:layout_constraintBottom_toBottomOf="@id/etSearchValueFragmentSearch"
        app:tint="@color/primary"
        />

    <EditText
        android:id="@+id/etSearchValueFragmentSearch"
        android:layout_width="180dp"
        android:layout_height="wrap_content"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        />

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="4dp"

        app:layout_constraintTop_toBottomOf="@id/etSearchValueFragmentSearch"
        android:background="@color/primary"
        android:layout_margin="15dp"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEntrysListFragmentSearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/vLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>