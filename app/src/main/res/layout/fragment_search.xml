<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".SearchFragment">


    <ImageView
        android:id="@+id/ivBackButtonFragmentSearch"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvHeadingFragmentSearch"
        app:layout_constraintTop_toTopOf="@id/tvHeadingFragmentSearch"
        app:layout_constraintBottom_toBottomOf="@id/tvHeadingFragmentSearch"
        app:tint="@color/primary"
        />



    <TextView
        android:id="@+id/tvHeadingFragmentSearch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:text="Search"
        android:textSize="40sp"
        android:textColor="@color/primary"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp"
        />

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="4dp"

        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:background="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/tvHeadingFragmentSearch"
        tools:layout_editor_absoluteX="14dp" />

    <ImageView
        android:id="@+id/ivSetFiltersFragmentSearch"
        android:layout_width="35dp"
        android:layout_height="35dp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/tvHeadingFragmentSearch"
        app:layout_constraintTop_toTopOf="@id/tvHeadingFragmentSearch"
        app:layout_constraintBottom_toBottomOf="@id/tvHeadingFragmentSearch"
        android:src="@drawable/filter_icon"
        app:tint="@color/primary"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/rvEntrysListFragmentSearch"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/vLine"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginTop="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>