<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="24dp"
    app:cardElevation="6dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardBackgroundColor="@color/ctp_surface0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="24dp">

        <!-- Username -->
        <EditText
            android:id="@+id/etUsername_login_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Username"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/ctp_text"
            android:textColorHint="@color/ctp_overlay1"
            android:backgroundTint="@color/ctp_lavender"
            android:inputType="textPersonName"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Password -->
        <EditText
            android:id="@+id/etPassword_login_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Password"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/ctp_text"
            android:textColorHint="@color/ctp_overlay1"
            android:backgroundTint="@color/ctp_lavender"
            android:inputType="textPassword"
            android:layout_marginTop="20dp"
            app:layout_constraintTop_toBottomOf="@id/etUsername_login_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Login button -->
        <Button
            android:id="@+id/btnLogin_login_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Login"
            android:fontFamily="@font/comfortaa"
            android:textStyle="bold"
            android:textColor="@color/ctp_base"
            android:backgroundTint="@color/ctp_lavender"
            android:layout_marginTop="30dp"
            app:layout_constraintTop_toBottomOf="@id/etPassword_login_card"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>

