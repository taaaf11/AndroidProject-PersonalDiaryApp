<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ctp_base"
    tools:context=".HomeFragment">

    <!-- Heading -->
    <TextView
        android:id="@+id/tvHeadingFragmentHome"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Home"
        android:textSize="28sp"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/ctp_text"
        android:layout_marginTop="32dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Welcome card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardWelcome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/ctp_surface0"
        app:layout_constraintTop_toBottomOf="@id/tvHeadingFragmentHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <TextView
            android:id="@+id/tvWelcomeText_fragment_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Welcome back!"
            android:textSize="20sp"
            android:textStyle="bold"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/ctp_lavender"
            android:padding="20dp"
            android:gravity="center"/>
    </androidx.cardview.widget.CardView>

    <!-- Check Entries Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnAddEntryFragmentHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="âž• Add Entry"
        android:textSize="16sp"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/ctp_base"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="40dp"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/ctp_pink"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/cardWelcome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Check Entries Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCheckEntriesFragmentHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="ðŸ“– View Entries"
        android:textSize="16sp"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/ctp_base"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="16dp"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/ctp_pink"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnAddEntryFragmentHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- Settings Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnSettingsFragmentHome"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="âš™ Settings"
        android:textSize="16sp"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/ctp_base"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="16dp"
        app:cornerRadius="16dp"
        app:backgroundTint="@color/ctp_lavender"
        app:iconPadding="8dp"
        app:layout_constraintTop_toBottomOf="@id/btnCheckEntriesFragmentHome"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

