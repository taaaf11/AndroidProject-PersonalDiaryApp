<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardCornerRadius="20dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="20dp"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="25dp"
        android:background="@color/ctp_surface0"

        >

        <TextView
            android:id="@+id/tvDiaryEntryTitle_layout_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Title"
            android:textSize="24sp"
            android:textStyle="bold"

            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:fontFamily="@font/comfortaa"
            />

        <TextView
            android:id="@+id/tvDiaryEntryContent_layout_card_view"
            android:layout_width="220dp"
            android:layout_height="wrap_content"

            android:text="Content"
            android:textSize="18sp"

            app:layout_constraintTop_toBottomOf="@id/tvDiaryEntryTitle_layout_card_view"
            app:layout_constraintStart_toStartOf="@id/tvDiaryEntryTitle_layout_card_view"

            android:layout_marginTop="7dp"
            android:fontFamily="@font/comfortaa"
            />

        <TextView
            android:id="@+id/tvClockIcon_layout_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text=""
            android:fontFamily="@font/symbols_nerd_font"
            android:textSize="12sp"

            app:layout_constraintTop_toBottomOf="@id/tvDiaryEntryContent_layout_card_view"
            app:layout_constraintStart_toStartOf="@id/tvDiaryEntryContent_layout_card_view"
            android:layout_marginTop="14dp"
            />

        <TextView
            android:id="@+id/tvDateValue_layout_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="Date"
            android:fontFamily="@font/comfortaa"
            android:textSize="12sp"

            app:layout_constraintStart_toEndOf="@id/tvClockIcon_layout_card_view"
            app:layout_constraintTop_toTopOf="@id/tvClockIcon_layout_card_view"
            app:layout_constraintBottom_toBottomOf="@id/tvClockIcon_layout_card_view"

            android:layout_marginStart="10dp"
            />

        <TextView
            android:id="@+id/tvOpenPopupMenu_layout_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"

            android:text="󰇙"
            android:textSize="20sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:padding="14dp"
            android:fontFamily="@font/symbols_nerd_font"
            />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>