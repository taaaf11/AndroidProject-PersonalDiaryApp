<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="16dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="20dp"
    app:cardElevation="8dp"
    app:cardBackgroundColor="@color/ctp_surface0">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="20dp">

        <!-- Title -->
        <TextView
            android:id="@+id/tvDiaryEntryTitle_layout_card_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Title"
            android:textSize="22sp"
            android:textStyle="bold"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/ctp_text"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toStartOf="@id/tvOpenPopupMenu_layout_card_view"
            app:layout_constraintHorizontal_bias="0" />

        <!-- Popup menu (3 dots) -->
        <TextView
            android:id="@+id/tvOpenPopupMenu_layout_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="󰇙"
            android:textSize="20sp"
            android:fontFamily="@font/symbols_nerd_font"
            android:padding="10dp"
            android:textColor="@color/ctp_overlay2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Content -->
        <TextView
            android:id="@+id/tvDiaryEntryContent_layout_card_view"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="This is a sample diary entry. It will show the first few lines of content..."
            android:textSize="16sp"
            android:ellipsize="end"
            android:maxLines="3"
            android:lineSpacingExtra="2dp"
            android:fontFamily="@font/comfortaa"
            android:textColor="@color/ctp_subtext0"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvDiaryEntryTitle_layout_card_view"
            app:layout_constraintStart_toStartOf="@id/tvDiaryEntryTitle_layout_card_view"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Date row -->
        <TextView
            android:id="@+id/tvClockIcon_layout_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:fontFamily="@font/symbols_nerd_font"
            android:textSize="12sp"
            android:textColor="@color/ctp_overlay2"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@id/tvDiaryEntryContent_layout_card_view"
            app:layout_constraintStart_toStartOf="@id/tvDiaryEntryContent_layout_card_view" />

        <TextView
            android:id="@+id/tvDateValue_layout_card_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Sep 8, 2025"
            android:fontFamily="@font/comfortaa"
            android:textSize="12sp"
            android:textColor="@color/ctp_overlay2"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/tvClockIcon_layout_card_view"
            app:layout_constraintBaseline_toBaselineOf="@id/tvClockIcon_layout_card_view" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>


