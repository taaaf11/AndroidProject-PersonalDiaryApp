<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/background"
    tools:context=".AddFragment">

    <ImageView
        android:id="@+id/ivBackButtonFragmentAdd"
        android:layout_width="35dp"
        android:layout_height="35dp"

        android:src="@drawable/back_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tvHeadingFragmentAdd"
        app:layout_constraintTop_toTopOf="@id/tvHeadingFragmentAdd"
        app:layout_constraintBottom_toBottomOf="@id/tvHeadingFragmentAdd"
        app:tint="@color/primary"
        />


    <TextView
        android:id="@+id/tvHeadingFragmentAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Add Entry"
        android:textColor="@color/primary"
        android:textSize="40sp"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/vLine"
        android:layout_width="match_parent"
        android:layout_height="4dp"

        android:layout_margin="15dp"
        android:layout_marginTop="16dp"
        android:background="@color/primary"
        app:layout_constraintTop_toBottomOf="@id/tvHeadingFragmentAdd"
        tools:layout_editor_absoluteX="14dp" />

    <EditText
        android:id="@+id/etTitleFragmentAdd"
        android:layout_width="180dp"
        android:layout_height="wrap_content"


        android:hint="Title"
        android:textColor="@color/primary"

        app:layout_constraintBottom_toTopOf="@id/tvTransparentCenterHelperForEditTextsFragmentAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="40dp"
        />

    <TextView
        android:id="@+id/tvContentHeadingFragmentAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:textColor="@color/primary"
        android:text="Content"
        android:textSize="30sp"

        app:layout_constraintTop_toBottomOf="@id/tvTransparentCenterHelperForEditTextsFragmentAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        />

    <EditText
        android:id="@+id/etContentFragmentAdd"
        android:layout_width="180dp"
        android:layout_height="wrap_content"

        android:hint="Content"
        android:textColor="@color/primary"
        android:inputType="textMultiLine"

        app:layout_constraintTop_toBottomOf="@id/tvContentHeadingFragmentAdd"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        />

    <TextView
        android:id="@+id/tvTransparentCenterHelperForEditTextsFragmentAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnAddEntryFragmentAdd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:textColor="@color/primary"
        android:backgroundTint="@color/btnbackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"

        android:layout_marginBottom="20dp"
        />

</androidx.constraintlayout.widget.ConstraintLayout>