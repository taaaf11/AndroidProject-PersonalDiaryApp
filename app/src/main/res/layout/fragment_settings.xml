<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayoutFragmentSettings"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ctp_base"
    tools:context=".SettingsFragment">

    <!-- Back Button -->
    <ImageView
        android:id="@+id/ivBackButtonFragmentSettings"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:src="@drawable/back_button"
        app:tint="@color/ctp_lavender"
        app:layout_constraintBottom_toBottomOf="@id/tvHeadingFragmentSettings"
        app:layout_constraintEnd_toStartOf="@id/tvHeadingFragmentSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/tvHeadingFragmentSettings" />

    <!-- Heading -->
    <TextView
        android:id="@+id/tvHeadingFragmentSettings"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="Settings"
        android:textSize="32sp"
        android:textStyle="bold"
        android:fontFamily="@font/comfortaa"
        android:textColor="@color/ctp_lavender"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Settings Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cvSettingsForm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        app:cardCornerRadius="20dp"
        app:cardElevation="6dp"
        app:cardBackgroundColor="@color/ctp_surface0"
        app:layout_constraintTop_toBottomOf="@id/tvHeadingFragmentSettings"
        app:layout_constraintBottom_toTopOf="@id/btnSetCredentialsFragmentSettings"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp">

            <!-- Username Heading -->
            <TextView
                android:id="@+id/tvUsernameHeadingSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Username"
                android:textStyle="bold"
                android:textColor="@color/ctp_lavender"
                android:textSize="18sp"
                android:fontFamily="@font/comfortaa"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Username Input -->
            <EditText
                android:id="@+id/etUsernameFragmentSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter your username"
                android:fontFamily="@font/comfortaa"
                android:textColor="@color/ctp_text"
                android:textColorHint="@color/ctp_overlay1"
                android:backgroundTint="@color/ctp_lavender"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvUsernameHeadingSettings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

            <!-- Password Heading -->
            <TextView
                android:id="@+id/tvPasswordHeadingSettings"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Password"
                android:textStyle="bold"
                android:textColor="@color/ctp_lavender"
                android:textSize="18sp"
                android:fontFamily="@font/comfortaa"
                android:layout_marginTop="80dp"
                app:layout_constraintTop_toBottomOf="@id/etUsernameFragmentSettings"
                app:layout_constraintStart_toStartOf="parent" />

            <!-- Password Input -->
            <EditText
                android:id="@+id/etPasswordFragmentSettings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:hint="Enter your password"
                android:inputType="textPassword"
                android:fontFamily="@font/comfortaa"
                android:textColor="@color/ctp_text"
                android:textColorHint="@color/ctp_overlay1"
                android:backgroundTint="@color/ctp_lavender"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@id/tvPasswordHeadingSettings"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <!-- Save Button -->
    <Button
        android:id="@+id/btnSetCredentialsFragmentSettings"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Save Credentials"
        android:fontFamily="@font/comfortaa"
        android:textStyle="bold"
        android:textColor="@color/ctp_base"
        android:backgroundTint="@color/ctp_lavender"
        android:layout_marginStart="40dp"
        android:layout_marginEnd="40dp"
        android:layout_marginBottom="40dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>

